<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:layout_gravity="center"
                android:text="Num\nLock" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="/" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="7\nHome" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="8\n↑" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="9\nPgUp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="4\n←" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="5\n" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="6\n→" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="1\nEnd" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="2\n↓" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text="3\nPgDn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="170.0dip"
                android:layout_height="85.0dip"
                android:text="0\nIns" />

            <Button
                android:layout_width="85.0dip"
                android:layout_height="85.0dip"
                android:text=".\nDel" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="85.0dip"
            android:layout_height="85.0dip"
            android:text="-" />

        <Button
            android:layout_width="85.0dip"
            android:layout_height="170.0dip"
            android:text="+" />

        <Button
            android:layout_width="85.0dip"
            android:layout_height="170.0dip"
            android:text="Enter" />
    </LinearLayout>
</LinearLayout>